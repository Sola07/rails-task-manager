
<h1>Tasks</h1>
<div>
<ul class="list-group">
  <% @tasks.each do |task| %>

    <li class="list-group-item d-flex justify-content-between p-3"> <%= check_box_tag(:completed) %>
    <%= label_tag(:pet_dog, "I own a dog") %><span class="p-2 text-decoration-none"><%= link_to task.title, task_path(task) %></span><i class="fa-solid fa-trash-can ms-auto p-2">
    <%= link_to "delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></i></li>
  <% end %>
</ul>
</div>

<p class="btn btn-outline-info mt-3"><%= link_to "Add a task", tasks_new_path %></p>
